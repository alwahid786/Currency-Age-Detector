<body>
    <div id="wrapper">
      <!-- log in html -->
       <div class=" coman-modal coman-modal-a" id="sign-in">
        <div class="modal-dialog  modal-dialog-centered" role="document">
            <form action="admin/updatePassword?_method=PUT" method="POST">
                <div class="modal-content  text-center">
             <img src="img/logo-modal.png" alt="">
                  <h1>Change Your Password</h1>

                  <% if(error) { %>
                    <div class="alert alert-danger alert-dismissible " role="alert">
                      <strong><%=error%></strong> 
                      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                  <% } %>
                  <% if(success) { %>
                    <div class="alert alert-success alert-dismissible " role="alert">
                      <strong><%=success%></strong>
                      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                   <% } %>
                 
                        <div class="form-group pass-word">
                      <i class="fa fa-lock" aria-hidden="true"></i>
                         <input type="Password" name="oldPassword" class="form-control" placeholder="Enter Old Password">
                        </div>
                        <div class="form-group pass-word">
                      <i class="fa fa-lock" aria-hidden="true"></i>
                         <input type="Password" name="newPassword" class="form-control" placeholder="Enter New Password">
                        </div>
                         <div class="form-group pass-word">
                           <i class="fa fa-lock" aria-hidden="true"></i>
                            <input type="Password" name="confirmPassword" class="form-control" placeholder="Enter Confirm  Password">
                         </div>
                        
                      <button type="submit" class="btn btn-primary">UPDATE</button>
                    <!-- <button data-toggle="modal" data-target="#sign-up" type="submit" class="btn btn-default m-t-sm" onclick="location.href='sign-up.html'">CREATE ACCOUNT </button> -->
                </div>
            </form>
                         
         
    </div>
    </div>
  </div>

  
    <!-- log in html -->
        </div>
   
<!-- forgot password -->

    <div class="modal coman-modal  fade" id="success-msg" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" >
      <div class="modal-dialog modal-a" role="document">
        <div class="modal-content text-center">
             <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
            
             <h1>Successful</h1>
             <div class="success-msg-icon">
              <i class="fa fa-check-circle" aria-hidden="true"></i>
                 
             </div>
             <p>We have sent you a passoword reset link on your registered mail address.</p>
             
        </div>
      </div>
    </div>
<div class="modal coman-modal  fade" id="forgot-pw-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" >
      <div class="modal-dialog  modal-a" role="document">
        <div class="modal-content text-center">
             <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
             <!--  <a href="dashboard.html"> <img src="img/logo-modal.png" alt=""></a> -->
             <h2>Forgot Password</h2>
             <p>Don't remember your password? No worries. 
It happens with everyone. Just enter your registered email address and we will send you an link to reset password </p>
             <div class="form-group">
               <i class="fa fa-lock" aria-hidden="true"></i>
                  <input type="email" class="form-control" placeholder="Email">
             </div>
             <button type="submit" class="btn btn-primary text-uppercase" data-dismiss="modal" data-toggle="modal" data-target="#success-msg">submit</button>
        </div>
      </div>
    </div>
    <!-- Mainly scripts -->
    <script src="js/jquery-2.1.1.js"></script>
